# figure out exaclty where we're running on
if [[ $(uname) == 'Darwin' ]]; then
  export has_osx=1
else
  export has_linux=1
  export NVIM_TUI_ENABLE_TRUE_COLOR=1
fi

# prezto setup 
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

if [ -n "$has_osx" ]; then
  export PATH=/opt/local/bin:/opt/local/sbin:$PATH
fi

# general opts
bindkey -e
setopt autocd correct extendedglob histignorealldups nomatch notify sharehistory

# aliases
alias vi='nvim'
alias -g kdbg='BUILD_KERNEL=3.18.25-amd64-ani07 EXTRAVERSION=-amd64 ANI_DEBUG=1 DEBUG=1'

# Base16 Shell Theme
BASE16_SHELL="$HOME/.dotfiles/theme/base16-shell/base16-eighties.dark.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
